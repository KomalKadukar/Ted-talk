<div class="shadow-lg p-3 mb-5 bg-light rounded">
    <h3><%= @tedtalk.title %></h3>
  </div>

<div class="alert alert-info" role="alert">
    <h4 class="alert-heading"><%= @tedtalk.title %></h4>
    <hr>
    <p class="text-justify"><%= @tedtalk.description %></p>
    <hr>
    <p><%= link_to @tedtalk.speaker.name, @tedtalk.speaker %></p>
    <hr>
    <p><%= link_to @tedtalk.url, @tedtalk.url %></p>
    <div class="embed-responsive embed-responsive-16by9">
      <iframe class="embed-responsive-item" src="<%= @tedtalk.url %>" allowfullscreen></iframe>
    </div>
    <hr>
    <p><% @tedtalk.tags.each do |tag| %>
        <%= link_to tag.name.strip.gsub("'","").capitalize, tag, class: "btn btn-outline-primary"  %>
      <% end %>
    </p>
    <hr>
    <p>Views: <%= @tedtalk.views %></p>
  </div>
