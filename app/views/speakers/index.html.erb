<div class="shadow-lg p-3 mb-5 bg-light rounded">
  <h3>Available Speakers</h3>
</div>

<div class="col align-self-start">
<%= paginate @speakers, theme: 'twitter-bootstrap-4' %>
</div>

<div class="container">
  <div class="list-group">
    <% @speakers.each do |speaker| %>
      <%= link_to speaker.name, speaker, class: "list-group-item list-group-item-action list-group-item-light font-weight-bold" %>
    <% end %>
  </div>
</div>
